---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout accent="background-color: var(--color-green-800)" title="Page Not Found" description="Sorry, the page you're looking for doesn't exist.">
  <section class="flex flex-col items-center justify-center text-center px-4 py-32">
    <p class="text-xl text-gray-700 mb-6 mt-4">Oops! We couldn't find that page.</p>
    <p class="text-gray-600 mb-8">
      It might have been moved, deleted, or you may have typed the address incorrectly.
    </p>
    <a
      href="/"
      class="bg-green-800 text-white px-6 py-3 rounded-full font-medium hover:bg-green-700 transition"
    >
      Back to Home
    </a>
  </section>
</BaseLayout>
